<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!-- Updated Moon-based Game UI -->

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mars.Home">

   <children>
      <!-- Background image: Moon surface -->
      <ImageView fitHeight="720.0" fitWidth="1155.0" layoutX="-120.0" layoutY="-4.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../images/home.jpeg" />
         </image>
      </ImageView>

      <!-- "Play Game" Button -->
      <Button fx:id="play_game" layoutX="335.0" layoutY="155.0" mnemonicParsing="false" onAction="#onPlayGame" style="-fx-background-color: transparent; -fx-border-color: transparent;">
         <graphic>
            <StackPane>
               <!-- Background Image -->
               <ImageView fitHeight="80.0" fitWidth="242.0">
                  <image>
                     <Image url="@../../../images/bg.png" />
                  </image>
               </ImageView>
               <!-- Text on Top of Image -->
               <Label text="New Game" style="-fx-font-family: 'Super Pixel'; -fx-font-size: 22px; -fx-text-fill: #000000;" />
            </StackPane>
         </graphic>
      </Button>

      <!-- "Character" Button -->
      <Button fx:id="character" layoutX="337.0" layoutY="224.0" mnemonicParsing="false" onAction="#onCharacter" style="-fx-background-color: transparent; -fx-border-color: transparent;">
         <graphic>
            <StackPane>
               <!-- Background Image -->
               <ImageView fitHeight="80.0" fitWidth="242.0">
                  <image>
                     <Image url="@../../../images/bg.png" />
                  </image>
               </ImageView>
               <!-- Text on Top of Image -->
               <Label text="Character" style="-fx-font-family: 'Super Pixel'; -fx-font-size: 22px; -fx-text-fill: #000000;" />
            </StackPane>
         </graphic>
      </Button>

      <!-- "Settings" Button -->
      <Button fx:id="settings" layoutX="335.0" layoutY="295.0" mnemonicParsing="false" onAction="#onSettings" style="-fx-background-color: transparent; -fx-border-color: transparent;">
         <graphic>
            <StackPane>
               <!-- Background Image -->
               <ImageView fitHeight="80.0" fitWidth="242.0">
                  <image>
                     <Image url="@../../../images/bg.png" />
                  </image>
               </ImageView>
               <!-- Text on Top of Image -->
               <Label text="Settings" style="-fx-font-family: 'Super Pixel'; -fx-font-size: 22px; -fx-text-fill: #000000;" />
            </StackPane>
         </graphic>
      </Button>

      <!-- "Support" Button -->
      <Button fx:id="support" layoutX="335.0" layoutY="365.0" mnemonicParsing="false" onAction="#onSupport" style="-fx-background-color: transparent; -fx-border-color: transparent;">
         <graphic>
            <StackPane>
               <!-- Background Image -->
               <ImageView fitHeight="80.0" fitWidth="242.0">
                  <image>
                     <Image url="@../../../images/bg.png" />
                  </image>
               </ImageView>
               <!-- Text on Top of Image -->
               <Label text="Support" style="-fx-font-family: 'Super Pixel'; -fx-font-size: 22px; -fx-text-fill: #000000;" />
            </StackPane>
         </graphic>
      </Button>

      <!-- "Marketplace" Button -->
      <Button fx:id="marketplace" layoutX="335.0" layoutY="435.0" mnemonicParsing="false" onAction="#onMarketplace" style="-fx-background-color: transparent; -fx-border-color: transparent;">
         <graphic>
            <StackPane>
               <!-- Background Image -->
               <ImageView fitHeight="80.0" fitWidth="262.0">
                  <image>
                     <Image url="@../../../images/bg.png " />
                  </image>
               </ImageView>
               <!-- Text on Top of Image -->
               <Label text="Marketplace" style="-fx-font-family: 'Super Pixel'; -fx-font-size: 22px; -fx-text-fill: #000000;" />
            </StackPane>
         </graphic>
      </Button>
   </children>
</AnchorPane>