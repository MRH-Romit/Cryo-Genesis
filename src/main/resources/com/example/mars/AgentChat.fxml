<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mars.Socket.ChatController">
    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <!-- ScrollPane for message history -->
        <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="messageContainer" styleClass="message-container" style="-fx-background-color: transparent; -fx-padding: 10;" />
        </ScrollPane>
        <!-- Input area for sending messages -->
        <HBox spacing="10">
            <TextField fx:id="messageField" promptText="Enter your message..." HBox.hgrow="ALWAYS" />
            <Button text="Send" onAction="#sendMessage" />
        </HBox>
    </VBox>
</AnchorPane>
