<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="550.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.mars.Socket.ChatController" stylesheets="@../../../Design/chat-styles.css">
    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
            <VBox fx:id="messageContainer" style="-fx-background-color: #FEEE99; -fx-padding: 10;"/>
        </ScrollPane>
        <HBox spacing="10">
            <TextField fx:id="messageField" HBox.hgrow="ALWAYS" onAction="#sendMessage" style="-fx-font-family: 'Monospace'; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Button text="Send" onAction="#sendMessage" style="-fx-font-family: 'Monospace'; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #444444; -fx-text-fill: #FFFFFF; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
        </HBox>
    </VBox>
</AnchorPane>
