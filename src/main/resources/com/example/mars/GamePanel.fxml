<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane style="-fx-background-color: #FEEE99;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mars.GamePanel">
   <!-- Pause Button at the top-right corner -->
   <Button fx:id="pause_btn" layoutX="750.0" layoutY="10.0" mnemonicParsing="false" onAction="#onPauseClick" style="-fx-background-color: transparent; -fx-border-color: transparent;">
      <graphic>
         <ImageView fitHeight="50.0" fitWidth="58.0">
            <image>
               <Image url="@../../../images/PauseButton.png" />
            </image>
         </ImageView>
      </graphic>
   </Button>

   <!-- Character Info and Level at the top-left corner -->
   <ImageView fitHeight="60.0" fitWidth="60.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../../images/char.png" />
      </image>
   </ImageView>

   <VBox layoutX="80.0" layoutY="10.0" spacing="5.0">
      <Label style="-fx-font-family: 'Super Pixel'; -fx-font-size: 18px; -fx-text-fill: #000000;" text="Name: Hero" />
      <Label style="-fx-font-family: 'Super Pixel'; -fx-font-size: 18px; -fx-text-fill: #000000;" text="Level: 5" />
   </VBox>

   <!-- Life Indicator -->
   <Label layoutX="10.0" layoutY="80.0" prefHeight="30.0" prefWidth="200.0" style="-fx-font-family: 'Super Pixel'; -fx-font-size: 18px; -fx-text-fill: #000000;" text="Life: ⭐ ⭐ ⭐" />

   <!-- Game Canvas for Drawing -->
   <Canvas fx:id="gameCanvas" height="430.0" layoutX="0.0" layoutY="120.0" style="-fx-border-color: #444444; -fx-border-width: 2px;" width="850.0" />

</AnchorPane>
