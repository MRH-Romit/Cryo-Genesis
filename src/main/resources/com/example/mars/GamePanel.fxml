    <Canvas fx:id="gameCanvas" height="550.0" width="850.0" />
    <Button fx:id="pause_btn"
            layoutX="788.0"
            layoutY="14.0"
            mnemonicParsing="false"
            onAction="#onPauseClick"
            text="Pause" />

</AnchorPane>
